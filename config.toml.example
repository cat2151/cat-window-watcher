# Cat Window Watcher Configuration
# This is a provisional implementation for testing purposes

# Verbose mode - print configuration details when loading
# Set to true to enable detailed output, false to disable (default: false)
verbose = false

# Debug screensaver detection - print detailed information about screensaver detection
# When enabled, prints window title and all screensaver detection information every time
# the screensaver detection logic runs. This helps diagnose issues with screensaver
# detection, especially on Windows where the screensaver may not be recognized correctly.
# Set to true to enable debug output, false to disable (default: false)
debug_screensaver_detection = false

# Default score applied when no window pattern matches
# This helps detect configuration errors - if patterns are misconfigured,
# you'll see this score being applied repeatedly
# Set to -1 (default) to easily spot misconfigurations, or 0 to disable
default_score = -1

# Apply default score mode - control whether default_score is applied
# This is a mode to enable/disable the application of default_score
# Set to true (default) to apply default_score when no pattern matches
# Set to false to not apply any score when no pattern matches (score stays unchanged)
apply_default_score_mode = true

# Self window score - score applied when the app's own window is active
# When you switch focus to the Cat Window Watcher window itself,
# this score will be applied instead of default_score or "no match"
# Set to 0 (default) to not change score when viewing the app
# Set to a positive value to reward checking your score
# Set to a negative value to discourage excessive score checking
self_window_score = 0

# Mild penalty mode - limit negative scores to -1 during specified hours
# This is a provisional implementation for testing purposes
# Set to true to enable, false to disable (default: false)
mild_penalty_mode = false

# Start hour for mild penalty mode (0-23, default: 22)
# When mild_penalty_mode is enabled, negative scores will be limited to -1
# during the time range from mild_penalty_start_hour to mild_penalty_end_hour
mild_penalty_start_hour = 22

# End hour for mild penalty mode (0-23, default: 23)
# The time range is inclusive of both start and end hours
mild_penalty_end_hour = 23

# Always on top mode - keep the window on top of all other windows
# Set to true to enable, false to disable (default: true)
always_on_top = true

# Hide on mouse proximity mode - when always_on_top is enabled,
# hide the window (move to background) when mouse cursor approaches it
# Set to true to enable, false to disable (default: true)
# This only works when always_on_top is true
hide_on_mouse_proximity = true

# Proximity distance in pixels - distance threshold for mouse proximity detection
# When mouse cursor is within this distance from the window, it will be hidden
# Default: 50 pixels
proximity_distance = 50

# Always on top while score decreasing mode - keep window on top while score continues to decrease
# This helps you stay aware when your focus is drifting
# Set to true to enable, false to disable (default: true)
always_on_top_while_score_decreasing = true

# Score color settings - font color for score display based on score change
# score_up_color: Color when score increases or stays the same (default: "#ffffff" white)
# score_down_color: Color when score decreases (default: "#ff0000" red)
score_up_color = "#ffffff"
score_down_color = "#ff0000"

# Reset score every 30 minutes mode - similar to Pomodoro Technique
# When enabled, the score automatically resets to 0 at the top (:00) and bottom (:30) of each hour
# This helps you focus on "just the next 30 minutes" making it easier to concentrate
# Set to true to enable, false to disable (default: true)
reset_score_every_30_minutes = true

# Fade window on flow mode - gradually make window transparent when in flow state
# When enabled, after being in score-up state for flow_mode_delay_seconds,
# the window will gradually fade (become more transparent) to help you focus
# Set to true to enable, false to disable (default: true)
fade_window_on_flow_mode_enabled = true

# Flow mode delay in seconds - time to wait before starting fade (default: 3)
# After transitioning from non-score-up to score-up state, the window will wait
# this many seconds before starting the fade effect
flow_mode_delay_seconds = 3

# Flow mode fade rate - transparency increase per second in percent (default: 20)
# The window will become this percent more transparent each second during flow mode
# Range: 1-100 (1 = slow fade, 100 = instant transparency)
flow_mode_fade_rate_percent_per_second = 20

# Default transparency - initial transparency level of the window (default: 1.0)
# Set the default transparency/opacity of the window when it starts
# Range: 0.0-1.0 (0.0 = fully transparent, 1.0 = fully opaque)
# This is useful if you want the window to be slightly transparent by default
# Default: 1.0 - fully opaque
# default_transparency = 1.0

# Window position settings - initial x and y coordinates for window position
# When both window_x and window_y are specified, the window will open at that position
# If either is not specified (or set to null), the system will choose the default position
# Coordinates are in pixels from the top-left corner of the screen
# Default: not set (null) - system chooses position
# window_x = 100
# window_y = 100

# Game playing detection - reduce check frequency when playing games
# This feature is inspired by the fighting-game-button-challenge repository
# When enabled and a matching game process is detected, the app will check
# at a longer interval (e.g., 60 seconds instead of 1 second) until the game ends
# This reduces resource usage and allows you to focus on gameplay without frequent checks
[game_playing_detection]
enabled = false  # Set to true to enable game detection
process_names = ["StreetFighter6.exe", "SF6.exe"]  # List of game process names to detect
check_interval_seconds = 60  # Check interval in seconds when game is detected (default: 60)

